@inherits LayoutComponentBase

<!--
    Definiert ein Extra-Layout für die Login/Register-Seite
    =======================================================
-->


<div class="login-page">
    <div class="login-container">
        <MudText Typo="Typo.h2" Align="Align.Center">WebData</MudText> <!-- Title centered above the form -->
        <MudPaper Class="login-box ">
            @Body
        </MudPaper>
    </div>
</div>

<MudThemeProvider Theme="@_theme" IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@code {

    /// <summary>
    /// Gibt an ob die Anwendung im Darkmode ist
    /// </summary>
    private bool _isDarkMode = true;

    /// <summary>
    /// Beinhaltet alle Theme-Werte
    /// </summary>
    private MudTheme? _theme = null;

    /// <summary>
    /// Initialisiert das Theme beim Laden des Layouts
    /// </summary>
    protected override void OnInitialized()
    {
        base.OnInitialized();

        _theme = new()
            {
                PaletteLight = _lightPalette,
                PaletteDark = _darkPalette,
                LayoutProperties = new LayoutProperties()
            };
    }

    /// <summary>
    /// Ändert zwischen Darkmode & Lightmode
    /// </summary>
    private void DarkModeToggle()
    {
        _isDarkMode = !_isDarkMode;
    }

    /// <summary>
    /// Definiert die Farbpalette für den Lightmode
    /// </summary>
    private readonly PaletteLight _lightPalette = new()
        {
            Black = "#110e2d",
            AppbarText = "#424242",
            AppbarBackground = "rgba(255,255,255,0.8)",
            DrawerBackground = "#ffffff",
            GrayLight = "#e8e8e8",
            GrayLighter = "#f9f9f9",
        };

    /// <summary>
    /// Definiert die Farbpalette für den Darkmode
    /// </summary>
    private readonly PaletteDark _darkPalette = new()
        {
            Primary = "#569cd6",
            Surface = "#252526",
            Background = "#1e1e1e",
            BackgroundGray = "#2d2d30",
            AppbarText = "#d4d4d4",
            AppbarBackground = "rgba(30,30,30,0.8)",
            DrawerBackground = "#2d2d30",
            ActionDefault = "#d7ba7d",
            ActionDisabled = "#808080",
            ActionDisabledBackground = "#3e3e42",
            TextPrimary = "#d4d4d4",
            TextSecondary = "#a6a6a6",
            TextDisabled = "#6f6f6f",
            DrawerIcon = "#c5c5c5",
            DrawerText = "#d4d4d4",
            GrayLight = "#3e3e42",
            GrayLighter = "#454545",
            LinesDefault = "#3e3e42",
            TableLines = "#3e3e42",
            Divider = "#444444",
            OverlayLight = "#1e1e1e80",
        };

    /// <summary>
    /// Definiert das Symbol für den Dark-Light-Mode Switch-Button
    /// </summary>
    public string DarkLightModeButtonIcon => _isDarkMode switch
    {
        true => Icons.Material.Rounded.AutoMode,
        false => Icons.Material.Outlined.DarkMode,
    };
}


<style>
    .login-page, !.login-box {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f0f0f0; /* Optional: Change this to your desired background color */
        flex-direction: column; /* Stack title and form vertically */
    }

    .login-container {
        text-align: center; /* Center title and form */
    }

    .login-box {
        border: 2px solid black; /* Black border around the form */
        border-radius: 8px; /* Optional: Rounded corners */
    }

    .pa-4 {
        padding: 16px; /* Padding for inner content */
    }

    .mt-4 {
        margin-top: 16px; /* Add margin to the top of the form */
    }

    .mud-tabs-toolbar .mud-divider {
        display: none;
    }

</style>
